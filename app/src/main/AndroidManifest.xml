<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.lightricks.mightyrecycler">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">

        <activity android:name=".home.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".linear.LinearLayoutActivity"
            android:label="@string/linear_layout_label"
            android:parentActivityName=".home.HomeActivity"/>

        <activity
            android:name=".grid.GridLayoutActivity"
            android:label="@string/grid_layout_label"
            android:parentActivityName=".home.HomeActivity"/>

        <activity
            android:name=".staggered.StaggeredGridActivity"
            android:label="@string/staggered_grid_label"
            android:parentActivityName=".home.HomeActivity"/>

        <activity
            android:name=".drag.DragAndSwipeActivity"
            android:label="@string/drag_n_swipe_label"
            android:parentActivityName=".home.HomeActivity"/>

    </application>

</manifest>